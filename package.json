{
  "name": "amenity-finder",
  "description": "Webcomponent amenity-finder following open-wc recommendations",
  "license": "MIT",
  "author": "amenity-finder",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "postbuild": "cp dist/index.html dist/200.html",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "start": "web-dev-server",
    "start:ios": "cap open ios",
    "deploy": "npm run build && surge --domain itchy-frog.surge.sh dist",
    "test": "web-test-runner --coverage",
    "test:all": "npm run test -- --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner --watch",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@capacitor/ios": "^3.2.2",
    "@inventage/leaflet-map": "^0.7.0",
    "@material/mwc-button": "^0.23.0",
    "@material/mwc-drawer": "^0.23.0",
    "@material/mwc-icon": "^0.23.0",
    "@material/mwc-icon-button": "^0.23.0",
    "@material/mwc-linear-progress": "^0.23.0",
    "@material/mwc-list": "^0.23.0",
    "@material/mwc-textfield": "^0.23.0",
    "@material/mwc-top-app-bar": "^0.23.0",
    "geodesy": "^2.2.1",
    "lit": "^2.0.0-rc.4",
    "lit-html": "^1.4.1",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@capacitor/cli": "^3.2.2",
    "@open-wc/building-rollup": "^1.10.0",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@web/dev-server": "^0.1.22",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.13.17",
    "@web/test-runner-playwright": "^0.8.8",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "rules": {
      "no-return-assign": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "error"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 160,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
