{
  "name": "amenity-finder",
  "version": "1.2.0",
  "description": "An application that helps you find the right amenity around you.",
  "license": "MIT",
  "author": "Inventage AG <info@inventage.com>",
  "repository": "github:inventage/amenity-finder",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.js --sourcemap --sourcemapExcludeSources",
    "build:ios": "npm run build && cap sync",
    "deploy": "npm run build && cp dist/index.html dist/200.html && surge --domain itchy-frog.surge.sh dist",
    "format": "eslint --ext .js,.mjs,.html . --fix --ignore-path .gitignore  --ignore-pattern 'ios/**' && prettier \"**/*.{js,mjs,html}\" --write",
    "postinstall": "generate-license-file --input package.json --output public/3rd-party-licenses.txt",
    "lint": "eslint --ext .js,.mjs,.html . --ignore-path .gitignore --ignore-pattern 'ios/**' && prettier \"**/*.{js,mjs,html}\" --check",
    "prepare": "is-ci || husky install",
    "run:ios": "cap run ios --target FED691A6-4E90-4B89-879D-8423ABA339B2",
    "start": "web-dev-server",
    "start:build": "web-dev-server -c web-dev-server-ssl.config.mjs --root-dir dist",
    "start:ios": "cap open ios",
    "start:ssl": "web-dev-server -c web-dev-server-ssl.config.mjs",
    "test": "web-test-runner --coverage",
    "test:all": "npm run test -- --playwright --browsers chromium firefox webkit",
    "test:watch": "web-test-runner --watch"
  },
  "dependencies": {
    "@capacitor/browser": "^1.0.5",
    "@capacitor/core": "^3.2.5",
    "@capacitor/geolocation": "^1.1.2",
    "@capacitor/ios": "^3.2.5",
    "@capacitor/splash-screen": "^1.1.5",
    "@inventage/leaflet-map": "^0.8.0",
    "@material/mwc-button": "^0.25.2",
    "@material/mwc-drawer": "^0.25.2",
    "@material/mwc-icon": "^0.25.2",
    "@material/mwc-icon-button": "^0.25.2",
    "@material/mwc-linear-progress": "^0.25.2",
    "@material/mwc-list": "^0.25.2",
    "@material/mwc-textfield": "^0.25.2",
    "@material/mwc-top-app-bar": "^0.25.2",
    "@pwabuilder/pwaupdate": "^0.2.0",
    "geodesy": "^2.2.1",
    "lit": "^2.0.2",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@capacitor/cli": "^3.2.5",
    "@open-wc/eslint-config": "^5.0.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@web/dev-server": "^0.1.25",
    "@web/dev-server-rollup": "^0.3.11",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.13.20",
    "@web/test-runner-playwright": "^0.8.8",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "generate-license-file": "^1.2.0",
    "globby": "^12.0.2",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0"
  },
  "engines": {
    "npm": ">=7"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "rules": {
      "no-return-assign": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "info",
            "error"
          ]
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 160,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
